# LLM Provider
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Store (Cloud)
# Get from: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-id.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# MongoDB (shared with backend)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/interview_platform

# Service Config
AI_SERVICE_PORT=8001
DEBUG=true

# Evaluation Thresholds
CONFIDENCE_THRESHOLD_ADVANCE=0.6
CONFIDENCE_THRESHOLD_SIMPLIFY=0.4
TECHNICAL_THRESHOLD_DEEP_DIVE=0.7
MAX_QUESTIONS_PER_STAGE=5
